class Solution {
public:
    ListNode* reverseBetween(ListNode* head, int left, int right) {
        ListNode* temp = head;
        ListNode* prev = NULL;
        ListNode* curr = NULL;
        ListNode* nxt = NULL;
        ListNode* thead = NULL;
        
        int i=1;
        while(i<=right){
            if(i==left){
                curr=prev;
                thead=temp;
                while(i!=right+1){
                    nxt = temp->next;
                    temp->next=prev;
prev=temp;
                    temp=nxt;
                    i++;
                }
                break;
            }
            else{
                prev=temp;
                temp=temp->next;
                i++;    
            }
        }
        if(left==1)
            head=prev;
        else{
            curr->next=prev;
        }
        thead->next=temp;
        return head;
    }
};
